def read_recipes_from_file(file_path):
    recipes = {}
    with open(file_path, 'r', encoding='utf-8') as file:
        current_recipe = None
        for line in file:
            clean_line = line.strip()
            if clean_line:  
                if not current_recipe:
                    current_recipe = clean_line  
                    recipes[current_recipe] = [] 
                else:
                    ingredient_info = clean_line.split(' | ')
                    ingredient = {
                        'ingredient_name': ingredient_info[0],
                        'quantity': int(ingredient_info[1]),
                        'measure': ingredient_info[2]
                    }
                    recipes[current_recipe].append(ingredient)
            else:
                current_recipe = None  
    return recipes

def display_recipes(recipes):
    for recipe, ingredients in recipes.items():
        print(recipe)
        for ingredient in ingredients:
            print(f"{ingredient['ingredient_name']}: {ingredient['quantity']} {ingredient['measure']}")
        print()

def main():
    file_path = 'recipes.txt' 
    recipes = read_recipes_from_file(file_path)
    display_recipes(recipes)

if __name__ == "__main__":
    main()